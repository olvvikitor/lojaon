

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model Cliente {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String?
  cpf       String     @unique
  telefone  String?
  pedidos   Pedido[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Pedido {
  id          String      @id @default(uuid())
  clienteId   String
  cliente     Cliente     @relation(fields: [clienteId], references: [id])
  descricao   String
  valor       Float
  status      StatusPedido @default(PENDENTE)
  produtos    Produto[]   @relation("PedidoProdutos")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum StatusPedido {
  PENDENTE
  PROCESSANDO
  ENVIADO
  ENTREGUE
  CANCELADO
}

model Produto {
  id          String      @id @default(uuid())
  nome        String
  descricao   String?
  preco       Float
  estoque     Int
  categoriaId String
  categoria   Categoria   @relation(fields: [categoriaId], references: [id])
  pedidos     Pedido[]    @relation("PedidoProdutos")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Categoria {
  id          String      @id @default(uuid())
  nome        String
  descricao   String?
  produtos    Produto[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}